@page
@model NotatkiWEB.Pages.Semesters.EditModel

@{
    ViewData["Title"] = "Edycja";
}

<h2>Edytuj</h2>

<h4>Lista semestrów</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SemesterList.IDSemester" />
            <div class="form-group">
                <label asp-for="SemesterList.SemesterName" class="control-label"></label>
                <input asp-for="SemesterList.SemesterName" class="form-control" />
                <span asp-validation-for="SemesterList.SemesterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
