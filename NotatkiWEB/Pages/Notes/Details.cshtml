@page
@model NotatkiWEB.Pages.Notes.DetailsModel

@{
    ViewData["Title"] = "Szczegóły";
}

<h1>Szczegóły notatki</h1>

<div>
    <h4>Notatka</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note.Title)
        </dd>
        <br />
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note.NoteContent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note.NoteContent)
        </dd>
        <br />
        <dt class="col-sm-2">
            Użytkownik:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note.ApplicationUser.FirstName)
            @Html.DisplayFor(model => model.Note.ApplicationUser.LastName)
        </dd>
        <br />
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note.SubjectList)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note.SubjectList.SubjectName)
        </dd>
        <br />
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note.NoteFileCaption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note.NoteFileCaption)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Note.IDNote">Edytuj</a> |
    <a asp-page="./Index">Wróć do listy</a>
</div>
